---
layout: base.hbs
title: "scut-<%= slug %>, a Scut Utility"
description: "scut-<%= slug %>: <%= summary %>"
---

<header role="banner" class="site-banner">
  {{>banner}}
</header>

<article role="main" class="site-main">

  <header>

    <h1 class="entry-title">{{name}}</h1>

    <dl class="info-list">
      <dt>use-name</dt>
      <dd>
        <code>scut-{{slug}}</code>
      </dd>

      {{#if type}}
      <dt>type</dt>
      <dd>{{type}}</dd>
      {{/if}}

      {{#if args}}
      <dt>arguments</dt>
      <dd>
        <ol class="args-list">
          {{#each args}}
          <li>
            <code>{{variable}}</code>
            {{#if this.default}}
            <dl class="default">
              <dt>default</dt>
              <dd>
                <code>{{this.default}}</code>
              </dd>
            </dl>
            {{/if}}
            {{#if comment}}
            <div class="args--comment">{{#markdown}}{{{comment}}}{{/markdown}}</div>
            {{/if}}
          </li>
          {{/each}}
        </ol>
      </dd>
      {{/if}}

      {{#if contentblock}}
      <dt class="info--label m-help js-help-btn" data-help="contentblock">@content</dt>
      <dd class="info--value">{{#markdown}}{{{contentblock}}}{{/markdown}}</dd>
      {{/if}}

      {{#if compatibility}}
      <dt class="info--label">compatibility</dt>
      <dd class="info--value">{{#markdown}}{{{compatibility}}}{{/markdown}}</dd>
      {{/if}}

    </dl>

  </header>

  <section>
    <p>
      {{summary}}
    </p>
    {{#markdown}}{{>body}}{{/markdown}}
  </section>

  {{#if example}}
  <section class="example">
    <h2>Example</h2>
    {{#if example.show-html}}
    <div class="example--html">
      <h3>HTML</h3>
      <pre><code class="language-markup">{{example.html}}</code></pre>
    </div>
    {{/if}}
    <div id="{{name}}-scss" class="example--scss">
      <h3>SCSS</h3>
      <pre><code class="language-scss">{{getExampleScss slug}}</code></pre>
    </div>
    <div id="{{name}}-css" class="example--css">
      <h3>Compiled CSS</h3>
      <pre><code class="language-css">{{{getExampleCss slug}}}</code></pre>
    </div>
    <button class="toggle-css js-toggle-css" data-entry="{{name}}">Show compiled CSS</button>
    <div class="example--disp">
      <h3>Result</h3>
      <div class="example--disp--inner">{{{example.html}}}</div>
    </div>
  </section>
  {{/if}}

  {{#if references}}
  <footer>
    <h2>References</h2>
    <ul class="refs">
      {{#each references}}
      <li>
        <a href="{{url}}" class="refs--i">
          {{#markdown}}{{{description}}}{{/markdown}}
        </a>
      </li>
      {{/each}}
    </ul>
  </footer>
  {{/if}}

</article>