<table class="info">
  <tbody>

    {{#if use-name}}
    <tr>
      <td class="info--label m-help js-help-btn" data-term="use-name" data-dir="open">
        use-name
      </td>
      <td class="info--value">
        <code>{{use-name}}</code>
      </td>
    </tr>
    {{/if}}

    {{#if type}}
    <tr>
      <td class="info--label m-help js-help-btn" data-term="type" data-dir="open">
        type
      </td>
      <td class="info--value">
        {{type}}
      </td>
    </tr>
    {{/if}}

    {{#if args}}
    <tr>
      <td class="info--label m-help js-help-btn" data-term="arguments" data-dir="open">
        arguments
      </td>
      <td class="info--value">
        <ol class="args">
          {{#each args}}
          <li>
            <code class="args--name">{{variable}}</code>
            {{#if this.default}}
            [&nbsp;<span class="args--default">default:</span> <code class="args--default--val">{{this.default}}</code>&nbsp;]
            {{/if}}
            {{#if comment}}
            <span class="args--comment">{{#markdown}}{{{comment}}}{{/markdown}}</span>
            {{/if}}
          </li>
          {{/each}}
        </ol>
      </td>
    </tr>
    {{/if}}

    {{#if contentblock}}
    <tr>
      <td class="info--label m-help js-help-btn" data-term="contentblock" data-dir="open">
        @content
      </td>
      <td class="info--value">
        {{#markdown}}{{{contentblock}}}{{/markdown}}
      </td>
    </tr>
    {{/if}}

    {{#if compatibility}}
    <tr>
      <td class="info--label">
        compatibility
      </td>
      <td class="info--value">
        {{#markdown}}{{{compatibility}}}{{/markdown}}
      </td>
    </tr>
    {{/if}}

  </tbody>
</table>

<section class="description">
  {{#markdown}}{{{text}}}{{/markdown}}
</section>

{{#if example}}
{{#with example}}
<section class="example">
  <h4>Example</h4>
  {{#if show-html}}
  <div class="example--html">
    <h5>HTML</h5>
    <pre><code class="language-markup">{{html}}</code></pre>
  </div>
  {{/if}}
  <div class="example--scss">
    <h5>SCSS</h5>
    <pre><code class="language-scss">{{getExampleScss ../name}}</code></pre>
  </div>
  <div class="example--disp">
    <h5>Result</h5>
    <div class="example--disp--inner">{{{html}}}</div>
  </div>
</section>
{{/with}}
{{/if}}

{{#if references}}
<footer>
  <h4>References</h4>
  <ul class="refs">
    {{#each references}}
    <li>
      <a href="{{url}}" class="refs--i">
        {{#markdown}}{{{description}}}{{/markdown}}
      </a>
    </li>
    {{/each}}
  </ul>
</footer>
{{/if}}