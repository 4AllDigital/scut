<article class="main">
  <header>
    <h1>SCUT Documentation</h1>
    <p>You will be happy.</p>
  </header>
  {{#each categories}}
  <section>
    <h2 id="{{name}}">{{slugToWords name}}</h2>
    {{#each items}}
    <section>
      <header>
        <h3 id="{{name}}">{{slugToWords name}}</h3>
        <dl class="info">
          <dt class="info--label">type</dt>
          <dd class="info--value">{{type}}</dd>
          <dt class="info--label">use-name</dt>
          <dd class="info--value">
            <code>{{use-name}}</code>
          </dd>
          {{#if args}}
          <dt class="info--label">arguments</dt>
          <dd class="info--value">
            <ol class="args">
              {{#each args}}
              <li>
                <code class="args--name">{{this.name}}</code>
                [&nbsp;<span class="args--default">default:</span> <code class="args--default--val">{{this.default}}</code>&nbsp;]
                {{#if this.comment}}
                <span class="args--comment">{{#markdown}}{{this.comment}}{{/markdown}}</span>
                {{/if}}
              </li>
              {{/each}}
            </ol>
          </dd>
          {{/if}}
        </dl>
      </header>
      <section class="description">
        {{#markdown}}{{{text}}}{{/markdown}}
      </section>
      {{#if examples}}
      {{#each examples}}
      <section class="example">
        <h4>Example</h4>
        <div class="example--code">
          {{#if show-html}}
          <h5>HTML</h5>
          <pre><code class="language-markup">{{html}}</code></pre>
          {{/if}}
          <h5>SCSS</h5>
          <pre><code class="language-scss">{{getExampleScss scss}}</code></pre>
        </div>
        <div class="example--disp">
          <h5>Result</h5>
          {{{html}}}
        </div>
      </section>
      {{/each}}
      {{/if}}
      {{#if references}}
      <footer>
        <h4>References</h4>
        <ul class="refs">
          {{#each references}}
          <li>
            <a href="{{this.url}}" target="_blank" class="refs--i">
              {{#markdown}}{{{this.description}}}{{/markdown}}
            </a>
          </li>
          {{/each}}
        </ul>
      </footer>
      {{/if}}
    </section>
    {{/each}}
  </section>
  {{/each}}
</article>