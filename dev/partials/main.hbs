<article class="main">
  <header class="container">
    <h1>SCUT Documentation</h1>
    <p>You will be happy.</p>
  </header>
  {{#each categories}}
  <section class="container">
    <h2>
      <a href="#{{category}}" id="{{category}}" class="inner-anchor">
        {{slugToWords category}}
      </a>
    </h2>
    {{#each items}}
    <section class="doc-i">
      <header class="doc-i--h">
        <a href="{{../../github-url}}/{{../category}}/_{{name}}.scss" target="_blank" class="source">view source</a>
        <h3>
          <a href="#{{name}}" id="{{name}}" class="inner-anchor">
            {{slugToWords name}}
          </a>
        </h3>
      </header>

      {{#if items}}
        {{#each items}}
        <section class="doc-i-sub">
          {{>subentry}}
        </section>
        {{/each}}
      {{else}}
      {{>entry}}
      {{/if}}
    </section>
    {{/each}}
  </section>
  {{/each}}
</article>