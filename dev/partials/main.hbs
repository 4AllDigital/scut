<article class="main overthrow">
  <header class="container intro" id="main">
    {{md "dev/partials/intro.md"}}
  </header>
  {{#each categories}}
  <section class="container">
    <h2>
      <a href="#{{category}}" id="{{category}}" class="inner-anchor">
        {{slugToWords category}}
      </a>
    </h2>
    {{#each items}}
    {{#if group-start}}
    <h3 class="group--h">
      <a href="#{{group-start}}" id="{{group-start}}" class="inner-anchor">
        {{slugToWords group-start}}
      </a>
    </h3>
    {{/if}}
    <section class="doc-i">
      <header class="doc-i--h">
        <a href="{{../../github-url}}/{{../category}}/_{{underscoresToHyphens name}}.scss" class="source"><span class="scut-inner">view source</span></a>
        <h3>
          <a href="#{{name}}" id="{{name}}" class="inner-anchor">
            {{slugToWords name}}
          </a>
        </h3>
      </header>
      {{>entry}}
    </section>
    {{/each}}
  </section>
  {{/each}}
</article>

<aside id="help-content" class="help-content-c">
  {{#each help}}
  <section id="help-{{term}}" class="help-content js-help-modal">
    <div class="scut-inner">
      {{#markdown}}{{{content}}}{{/markdown}}
      <button class="js-help-btn help-close" data-dir="close" data-term="{{term}}}">close</button>
    </div>
  </section>
  {{/each}}
</aside>