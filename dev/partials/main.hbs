<article class="main overthrow">
  <section class="container intro" id="main">
    {{>intro}}
  </section>
  {{#each categories}}
  <section class="container">
    <h2>
      <a href="#{{category}}" id="{{category}}" class="inner-anchor">
        {{slugToWords category}}
      </a>
    </h2>
    {{#each items}}
    {{#if group-start}}
    <h3 class="group--h">
      <a href="#{{group-start}}" id="{{group-start}}" class="inner-anchor">
        {{slugToWords group-start}}
      </a>
    </h3>
    {{/if}}
    <section class="doc-i" id="{{name}}">
      <header class="doc-i--h">
        <a href="{{#if href}}{{href}}{{else}}{{../../../github-url}}/{{../../category}}/_{{underscoresToHyphens name}}.scss{{/if}}" class="source">view source</a>
        <h3>
          <a href="#{{name}}" class="inner-anchor">
            {{slugToWords name}}
          </a>
        </h3>
      </header>
      <div class="entry-body">
        {{>entry}}
      </div>
    </section>
    {{/each}}
  </section>
  {{/each}}
</article>

<aside id="help-content" class="help-content-c">
  {{#each help}}
  <section id="help-{{term}}" class="help-content js-help-modal">
    <div class="scut-inner">
      {{#markdown}}{{{content}}}{{/markdown}}
      <button class="js-help-btn help-close" data-dir="close" data-term="{{term}}}">close</button>
    </div>
  </section>
  {{/each}}
</aside>